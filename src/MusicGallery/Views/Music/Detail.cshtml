@{
  Layout = null;

  var bandName = "Tool";
  var albumTitle = "Lateralus";
  var releaseDate = "May 15, 2001";
  var description = "<p>Lateralus is the third studio album by American rock band Tool. It was released through <strong>Volcano Entertainment</strong>.</p>";
  var artists = new string[]
  {
    "Vocals: Maynard James Keenan",
    "Guitar: Adam Jones",
    "Bass: Justin Chancellor",
    "Drums: Danny Carey"
  };
}

<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width" />
  <title>Music</title>
</head>
<body>
  <div>
    <h1>@bandName</h1>
    <h2>@albumTitle</h2>
    <h4>Release Date: @releaseDate</h4>

    <h5>Description:</h5>
    @Html.Raw(description)

    <h5>Artists:</h5>
    <ul>
      @foreach (var artist in artists)
      {
        <li>@artist</li>
      }
    </ul>
  </div>
</body>
</html>
