@model MusicGallery.Models.Music

@{
  Layout = "~/Views/Shared/_Layout.cshtml";
  ViewBag.Title = Model.DisplayText;
}

<h1>@Model.BandName</h1>
<h2>@Model.AlbumTitle</h2>
<h4>Release Date: @Model.ReleaseDate</h4>

<h5>Description:</h5>
@Html.Raw(Model.DescriptionHtml)

<h5>Artists:</h5>
<ul>
  @foreach (var artist in Model.Artists)
  {
    <li>@artist.Name - @artist.Role</li>
  }
</ul>